                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Checklist"
                ],
                "summary": "Buat checklist baru dengan repeat settings",
                "operationId": "6cd3aa07d0b04a7619eeddde30be97bf",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "title",
                                    "due_time"
                                ],
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "example": "Olahraga Pagi"
                                    },
                                    "due_time": {
                                        "type": "string",
                                        "format": "date-time",
                                        "example": "2025-08-01T07:00:00"
                                    },
                                    "repeat_interval": {
                                        "type": "string",
                                        "enum": [
                                            "daily",
                                            "3_days",
                                            "weekly",
                                            "monthly",
                                            "yearly"
                                        ],
                                        "example": "daily"
                                    },
                                    "repeat_type": {
                                        "type": "string",
                                        "enum": [
                                            "never",
                                            "until_date",
                                            "after_count"
                                        ],
                                        "example": "after_count"
                                    },
                                    "repeat_end_date": {
                                        "type": "string",
                                        "format": "date",
                                        "example": "2025-12-31"
                                    },
                                    "repeat_max_count": {
                                        "type": "integer",
                                        "example": 10
                                    },
                                    "repeat_days": {
                                        "type": "array",
                                        "items": {
                                            "type": "string",
                                            "enum": [
                                                "monday",
                                                "tuesday",
                                                "wednesday",
                                                "thursday",
                                                "friday",
                                                "saturday",
                                                "sunday"
                                            ]
                                        },
                                        "example": [
                                            "monday",
                                            "wednesday",
                                            "friday"
                                        ]
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Checklist berhasil dibuat"
                    },
                    "422": {
                        "description": "Validasi gagal"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
